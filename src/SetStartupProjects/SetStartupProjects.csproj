<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Simon Cropp</Authors>
    <NoPackageAnalysis>true</NoPackageAnalysis>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Description>Hacks a Visual Studio .suo file to set multiple startup projects.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright $([System.DateTime]::UtcNow.ToString(yyyy)) Simon Cropp. All rights reserved</Copyright>
    <PackageTags>SUO, Visual Studio, Startup</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/SimonCropp/SetStartupProjects/master/src/icon.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/SimonCropp/SetStartupProjects</PackageProjectUrl>
    <PackageOutputPath>..\..\nugets</PackageOutputPath>
    <NoWarn>CS1591</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <EmbeddedResource Include="Solution2012.suotemplate" />
    <EmbeddedResource Include="Solution2013.suotemplate" />
    <EmbeddedResource Include="Solution2015.suotemplate" />
    <EmbeddedResource Include="Solution2017.suotemplate" />
    <PackageReference Condition="$(Configuration) == 'Release'" Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta2-19324-01" PrivateAssets="All" />
    <PackageReference Include="OpenMcdf" Version="2.2.1.3" />
  </ItemGroup>
</Project>